<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Choose your Action" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewWelcome"
        android:textSize="40dp"
        android:layout_marginTop="50dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Route"
        android:id="@+id/btnTrackRoute"
        android:gravity="center"
        android:onClick="openActivityGPSTracerActivity"
        android:layout_above="@+id/btnWebServiceTest"
        android:layout_alignLeft="@+id/textViewWelcome"
        android:layout_alignStart="@+id/textViewWelcome"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export in Database"
        android:id="@+id/btnWebServiceTest"
        android:onClick="openActivityExportInDatabase"
        android:layout_above="@+id/btnClearDatabase"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Internal Database"
        android:id="@+id/btnClearDatabase"
        android:onClick="clearDatabase"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logged in as: "
        android:id="@+id/textViewLoggedInAs"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textViewWelcome"
        android:layout_alignEnd="@+id/textViewWelcome"
        android:layout_marginRight="135dp"
        android:layout_marginEnd="135dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
