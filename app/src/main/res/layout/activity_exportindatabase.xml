<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ExportInDatabase">

    <TextView android:text="Export in DB" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewWelcome"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXPORT DATA"
        android:id="@+id/btnExport"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="exportInDatabase"/>


    <TextView android:text="ResultRoute" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewResultRoute"
        android:textSize="40dp"
        android:layout_above="@+id/textviewResult"
        android:layout_alignRight="@+id/textViewWelcome"
        android:layout_alignEnd="@+id/textViewWelcome" />

    <TextView android:text="Result" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewResult"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRoutenname"
        android:text="Route1"
        android:hint="Enter Route Name"
        android:textSize="30dp"
        android:layout_above="@+id/btnExport"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitte geben Sie einen Namen fÃ¼r die Route ein:"
        android:id="@+id/textViewRoutenname"
        android:layout_above="@+id/editTextRoutenname"
        android:layout_alignRight="@+id/editTextRoutenname"
        android:layout_alignEnd="@+id/editTextRoutenname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
